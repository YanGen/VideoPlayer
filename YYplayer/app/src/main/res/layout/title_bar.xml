<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#ff3097fd"
    android:gravity="center_vertical"
    android:layout_height="55dp">

    <ImageView
        android:layout_marginLeft="8dp"
        android:src="@drawable/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/tv_search"
        android:text="全网搜索"
        android:textSize="15sp"
        android:textColor="@drawable/tv_search_textcolor_select"
        android:clickable="true"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/tv_search_drawable_select"
        android:background="@drawable/tv_search_background_select"
        android:layout_marginLeft="5dp"
        android:drawablePadding="3dp"
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/tv_game"
            android:drawableLeft="@drawable/game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_record"
        android:drawableLeft="@drawable/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>